{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest - All Tests",
      "program": "${workspaceFolder}/frontend/node_modules/.bin/vue-cli-service",
      "args": [
        "test:unit"
      ],
      "cwd": "${workspaceFolder}/frontend/",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/frontend/node_modules/@vue/cli-service/bin/vue-cli-service.js",
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest - Current File",
      "program": "${workspaceFolder}/frontend/node_modules/.bin/vue-cli-service",
      "args": [
        "test:unit",
        "${fileBasenameNoExtension}"
      ],
      "cwd": "${workspaceFolder}/frontend/",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/frontend/node_modules/@vue/cli-service/bin/vue-cli-service.js",
      }
    },
    {
        "type": "chrome",
        "request": "launch",
        "name": "Debug Chrome - Launch Frontend Localhost",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}/frontend"
    }
  ]
}
